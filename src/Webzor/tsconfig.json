{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": false,
    "target": "ES6",
    "rootDir": "./",
    "outDir": "./wwwroot", 
    "module": "ES6"
  },
  "include": [ "BrowserApi/**/*.ts" ],
  "exclude": [
    "node_modules/**/*.*",
    "**/*.spec.ts",
    "**/*.d.ts",
    "wwwroot"
  ]
}